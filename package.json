{
  "name": "specify-playground",
  "version": "1.1.0",
  "description": "a spec-kit playground to ease setting up play",
  "main": "src/cli/main.py",
  "scripts": {
    "test": "python -m pytest tests/ -v",
    "test:python": "python -m pytest tests/ -v",
    "test:unit": "python -m pytest tests/unit/ -v",
    "test:integration": "python -m pytest tests/integration/ -v",
    "test:contract": "python -m pytest tests/contract/ -v",
    "test:coverage": "python -m pytest tests/ --cov=src --cov-report=html --cov-report=term",
    "test:quiet": "python -m pytest tests/ -q",
    "lint": "python -m flake8 src/ tests/",
    "format": "python -m black src/ tests/",
    "typecheck": "python -m mypy src/",
    "check": "npm run format && npm run lint && npm run typecheck",
    "cli": "python -m src.cli.main",
    "start": "python -m src.cli.main",
    "run": "bash scripts/run-playground.sh"
  },
  "keywords": [
    "video",
    "duplicate",
    "scanner",
    "cli",
    "hash",
    "deduplication",
    "python",
    "pytest",
    "blake2b",
    "fuzzy-matching",
    "yaml",
    "pathlib",
    "specify",
    "playground"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "python": ">=3.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/specify-playground.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/specify-playground/issues"
  },
  "homepage": "https://github.com/yourusername/specify-playground#readme",
  "dependencies": {
    "typescript": "^4.0.0"
  },
  "devDependencies": {},
  "config": {
    "python_requirements": "requirements.txt"
  },
  "files": [
    "src/",
    "requirements.txt",
    "README.md",
    "LICENSE"
  ]
}